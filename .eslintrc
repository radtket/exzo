{
	"parser": "babel-eslint",
	"extends": ["airbnb-base", "prettier"],
	"globals": {
		"chrome": true
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"impliedStrict": true,
			"classes": true
		}
	},
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"commonjs": true,
		"jquery": true
	},
	"rules": {
		"comma-dangle": 0,
		"no-unused-expressions": ["error", {
			"allowShortCircuit": true,
			"allowTernary": true,
			"allowTaggedTemplates": true
		}],
		"prettier/prettier": [
			"error",
			{
				"trailingComma": "es5",
				"printWidth": 80,
				"jsxBracketSameLine": false,
				"number-leading-zero": null
			}
		],
		"no-console": "off"
	},
	"plugins": ["prettier"]
}
